{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "defaultMode": "acceptEdits",
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)"
    ],
    "allow": [
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(cat:*)",
      "Bash(touch:*)"
    ],
    "additionalDirectories": [
      "backend-main",
      "backend-legacy",
      "web-focal-os"
    ]
  },
  "enableAllProjectMcpServers": true
}